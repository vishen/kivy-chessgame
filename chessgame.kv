#:kivy 1.8.0

<ChessCoord>:
    size_hint: 0.5, 0.5

<ChessSquare>:
    group: 'board'

<ChessPiece>:
    scale_min: 0.5


BoxLayout:

    id: game
    size_hint: 1, 1
    orientation: "vertical"

    chess_grid: chess_grid
    main_text: main_text
                

    GridLayout:
        id: chess_grid
        rows: 9
        cols: 9
        padding: 10
        spacing: 0
        size_hint: 1, 1


    BoxLayout:
        orientation: "horizontal"
        size_hint: 1, 0.2

        
        Label:
            id: main_text
            size_hint: 1, 1
            padding: 10, 10
            text: ""